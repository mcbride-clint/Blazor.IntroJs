@page "/"
@inject Blazor.IntroJs.IntroJs introJs

<h1 data-intro="Hello World!" data-hint="Hint-Hint">Hello, world!</h1>

Welcome to your new app.

<button type="button" @onclick="StartIntroJs">Start Intro Js</button>
<button type="button" @onclick="AddHints">Add Hints</button>

@code {
    private async Task StartIntroJs()
    {
        await introJs.Start();
    }

    private async Task AddHints()
    {
        await introJs.AddHints();
    }
}