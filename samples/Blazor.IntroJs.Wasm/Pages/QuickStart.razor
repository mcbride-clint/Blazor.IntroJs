@page "/QuickStart"

<h3>Quick Start</h3>

<p>Short demo of the concepts on the IntroJs Quick Start Page using attribute based introJs Functionality</p>

<MudContainer MaxWidth="MaxWidth.Small">
    <MudCard Class="mb-2 onlyThese" 
             data-intro="Look at this Story" 
             data-title="Now with Title" 
             data-hint="Hint, Hint">
        <MudCardContent>
            <MudText data-intro="Look at this Story">Story Time</MudText>
            <MudText Typo="Typo.body2" data-intro="Look at this Story">The quick, brown fox jumps over a lazy dog.</MudText>
        </MudCardContent>
    </MudCard>

    <MudCard Class="mb-2 onlyThese"
             data-intro="Look at this Classy Story, I have my own class"
             data-hint="Hint, Hint">
        <MudCardContent>
            <MudText>Classy Story Time</MudText>
            <MudText Typo="Typo.body2">The quick, brown fox jumps over a lazy dog.</MudText>
        </MudCardContent>
    </MudCard>

    <MudCard Class="mb-2 onlyThese" 
             data-intro="Look at this Story" 
             data-hint="Hint, Hint">
        <MudCardContent>
            <MudText data-intro="Test">Text Area 1</MudText>
            <MudText Typo="Typo.body2" data-intro="Look at this Story">The quick, brown fox jumps over a lazy dog.</MudText>
        </MudCardContent>
    </MudCard>

</MudContainer>

<MudButton OnClick="StartIntroJs">Start</MudButton>
<MudButton OnClick="StartIntroJsClass">Start By Class</MudButton>
<MudButton OnClick="AddHints">Show Hints</MudButton>